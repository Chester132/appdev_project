<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp">

    <!-- Adjust ratio as needed -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1032dp"
        android:layout_height="1211dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982"
        app:srcCompat="@drawable/backgroundimg" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="157dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"

        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/titlepic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#E6FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:elevation="8dp"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:layout_marginTop="40dp"
                android:background="@drawable/edtstyle"/>

            <EditText
                android:id="@+id/login_email"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:elevation="8dp"
                android:layout_gravity="center_horizontal"
                android:hint="Email"
                android:layout_marginTop="30dp"
                android:background="@drawable/edtstyle"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:elevation="8dp"
                android:layout_gravity="center_horizontal"
                app:passwordToggleEnabled="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="30dp"
                android:background="@drawable/edtstyle"/>

            <EditText
                android:id="@+id/login_reenterpassword"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:elevation="8dp"
                android:layout_gravity="center_horizontal"
                android:hint="Re-type Password"
                android:inputType="textPassword"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/edtstyle"/>

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/gradient"
                android:shadowColor="#4CAF50"
                android:text="Sign Up"
                android:textColor="#FDFDFD"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/alreadyhaveanaccount_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Already have an account"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/google_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="89dp"
                    android:src="@drawable/google_logo" />

                <ImageView
                    android:id="@+id/facebook_btn"
                    android:layout_width="55dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook_logo" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>